{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Badgeify Docs",
  "colors": {
    "primary": "#0161ef",
    "light": "#0161ef",
    "dark": "#0161ef"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/icon-visibility",
              "features/customize-icon",
              "features/app-groups"
            ]
          },
          {
            "group": "App Guides",
            "pages": [
              "app-guides/adding-apps",
              "app-guides/whatsapp",
              "app-guides/discord",
              "app-guides/messenger",
              "app-guides/slack",
              "app-guides/mail",
              "app-guides/messages",
              "app-guides/teams"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }

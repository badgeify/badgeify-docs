{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Badgeify Docs",
  "colors": {
    "primary": "#0161ef",
    "light": "#0161ef",
    "dark": "#0161ef"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/customize-icon",
              "features/icon-visibility",
              "features/highlight-color",
              "features/app-groups"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "troubleshooting/missing-notification-counts",
              "troubleshooting/compatibility-hidden-bar",
              "troubleshooting/compatibility-ice",
              "troubleshooting/deactivate-device"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Homepage",
          "href": "https://badgeify.app",
          "icon": "house"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@badgeify.app"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Download",
      "href": "https://badgeify.app/download/"
    }
  },
  "footer": {
    "socials": {
      "website": "https://badgeify.app",
      "hacker-news": "https://news.ycombinator.com/item?id=43620471",
      "x": "https://x.com/badgeify"
    }
  },
  "integrations": {
    "plausible": {
      "server": "plausible.techflow.studio",
      "domain": "docs.badgeify.app"
    }
  }
}
